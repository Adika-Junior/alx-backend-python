					},
					"response": []
				},
				{
					"name": "Filter Conversations by Participant",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/conversations/?participant=user_uuid_here&participant_email=user@example.com",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", ""],
							"query": [
								{
									"key": "participant",
									"value": "user_uuid_here"
								},
								{
									"key": "participant_email",
									"value": "user@example.com"
								}
							]
						},
						"description": "Filter conversations by participant user ID or email."
					},
					"response": []
				},
				{
					"name": "Test Unauthorized Access",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/conversations/",
							"host": ["{{base_url}}"],
							"path": ["api", "conversations", ""]
						},
						"description": "Test that unauthorized users cannot access conversations (should return 401)."
					},
					"response": []
				}
			],
			"description": "Conversation management endpoints"
