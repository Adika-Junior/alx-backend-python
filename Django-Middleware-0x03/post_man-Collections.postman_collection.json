{
	"info": {
		"_postman_id": "messaging-app-auth-permissions",
		"name": "Messaging App - Authentication & Permissions",
		"description": "Postman collection for testing authentication (JWT), permissions, pagination, and filtering in the messaging app",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Obtain JWT Token (Login)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"access_token\", jsonData.access);",
									"    pm.environment.set(\"refresh_token\", jsonData.refresh);",
									"    console.log(\"Access token saved:\", jsonData.access);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"your_password_here\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/token/",
							"host": ["{{base_url}}"],
							"path": ["api", "token", ""]
						},
						"description": "Login and obtain JWT access and refresh tokens. Update email and password in the request body."
					},
					"response": []
				},
				{
					"name": "Refresh JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/token/refresh/",
							"host": ["{{base_url}}"],
							"path": ["api", "token", "refresh", ""]
						},
						"description": "Refresh the access token using the refresh token."
					},
					"response": []
				},
				{
					"name": "Verify JWT Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"{{access_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/token/verify/",
							"host": ["{{base_url}}"],
							"path": ["api", "token", "verify", ""]
						},
						"description": "Verify if the access token is valid."
					},
					"response": []
				}
			],
			"description": "JWT authentication endpoints"
		},
		{
			"name": "Conversations",
			"item": [
				{
